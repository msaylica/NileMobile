<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/bh_map"
        android:cropToPadding="true"
        android:fitsSystemWindows="false"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/bhaven" />

    <TextView
        android:id="@+id/plunket_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:ems="10"
        android:scaleType="centerInside"
        android:text="@string/bh_address"
        android:textColor="#7f7f7f" />

    <Button
        android:id="@+id/btnTell1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dip"
        android:background="#b2b2b2"
        android:ems="10"
        android:padding="15dip"
        android:text="@string/bh_tel"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnTell2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dip"
        android:background="#b2b2b2"
        android:ems="10"
        android:padding="15dip"
        android:text="@string/bh_tel2"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dip"
        android:background="#b2b2b2"
        android:padding="15dip"
        android:text="@string/bh_email"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/plunket_fax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:ems="10"
        android:padding="5dp"
        android:text="@string/bh_fax"
        android:textColor="#7f7f7f" />

</LinearLayout><!-- From: file:/G:/NilMobile2/nilMobile/src/main/res/layout/bhaven_contact.xml -->